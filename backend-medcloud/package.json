{
  "name": "backend",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "build": "tsc --project tsconfig.json && tscpaths -p tsconfig.json -s ./src -o ./dist",
    "dev": "ts-node-dev -r tsconfig-paths/register --inspect --transpile-only --ignore-watch node_modules --respawn src/shared/infra/http/server.ts",
    "start": "ts-node -r tsconfig-paths/register dist/shared/infra/http/server.js",
    "typeorm": "ts-node-dev -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "test": "NODE_ENV=test jest --runInBand --detectOpenHandles",
    "seed:seeder": "ts-node-dev -r tsconfig-paths/register  src/shared/infra/database-typeorm/seed",
    "seed:admin": "ts-node-dev src/shared/infra/database-typeorm/seed/admin.ts",
    "seed:delete-tables": "ts-node-dev -r tsconfig-paths/register  src/shared/infra/typeorm/seed/delete-tables.ts"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/jest": "^26.0.21",
    "@types/jsonwebtoken": "^8.5.1",
    "@types/uuid": "^8.3.0",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "@types/swagger-ui-express": "^4.1.3",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "bcrypt": "^5.0.1",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "pg": "^8.9.0",
    "dayjs": "^1.11.7",
    "ts-node": "^10.9.2",
    "swagger-ui-express": "^4.6.0",
    "typeorm": "^0.2.31",
    "uuid": "^8.3.2",
    "multer": "^1.4.5-lts.1",
    "express-async-errors": "^3.1.1",
    "tsyringe": "^4.4.0"
  }
}
